<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tylerheers.notetoself.SettingsActivity">

    <TextView
        android:text="@string/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/settingsTextView"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="SoundFX"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:id="@+id/soundFXTextView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/soundFXCheckBox"
        android:text="On / OFF"
        android:minWidth="120dp"
        android:layout_below="@+id/soundFXTextView"
        android:layout_alignRight="@+id/animationSpeedTextView"
        android:layout_alignEnd="@+id/animationSpeedTextView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Animation Speed"
        android:textSize="18sp"
        android:layout_below="@+id/soundFXTextView"
        android:layout_alignLeft="@+id/soundFXTextView"
        android:layout_alignStart="@+id/soundFXTextView"
        android:id="@+id/animationSpeedTextView" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animSpeedRadioGroup"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/soundFXCheckBox"
        android:layout_alignStart="@+id/soundFXCheckBox"
        android:layout_below="@id/animationSpeedTextView"
        android:layout_marginTop="10dp"
        android:minWidth="200dp"
        android:minHeight="150dp">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/radioGroup"
            android:layout_toEndOf="@+id/radioGroup"
            android:id="@+id/fastSpeedOption"
            android:text="Fast"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:id="@+id/mediumSpeedOption" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slow"
            android:id="@+id/slowSpeedOption" />

    </RadioGroup>


</RelativeLayout>
