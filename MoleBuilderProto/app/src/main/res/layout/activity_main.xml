<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tylerheers.molebuilderproto.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:minHeight="540dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.02"
        android:id="@+id/buildAtomLayout">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/atomBondLVLayout"
            android:orientation="vertical"
            android:background="#a1a1a1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/atomScrollView"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/atomScrollViewLayout">

                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bondScrollView"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/bondScrollViewLayout">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:backgroundTint="#4dffffff"
                        android:src="@drawable/bond_single"
                        android:id="@+id/singleBondImageButton"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:backgroundTint="#4dffffff"
                        android:src="@drawable/bond_double"
                        android:id="@+id/doubleBondImageButton"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:backgroundTint="#4dffffff"
                        android:src="@drawable/bond_triple"
                        android:id="@+id/tripleBondImageButton"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <com.example.tylerheers.molebuilderproto.MoleRenderer2D
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moleRenderer2D"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.98"
        android:id="@+id/buttonLayout"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#b0f2e7">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:id="@+id/startMoleSearch"
            android:src="@mipmap/ic_launcher"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:id="@+id/to3DButton"
            android:src="@drawable/ic_3d_rotation_white_24dp"
            android:background="@color/colorPrimary"
            android:elevation="24dp" />

    </LinearLayout>

</LinearLayout>
