<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tylerheers.molebuilderproto.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:minHeight="540dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/buildAtomLayout">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical"
            android:background="#cbb7b7b7"
            android:id="@+id/toolBarLayout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:id="@+id/atomScrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/atomScrollViewLayout">


                </LinearLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:id="@+id/modeScrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/bondScrollViewLayout">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bond_single"
                        android:id="@+id/singleBondButton" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bond_double"
                        android:id="@+id/doubleBondButton" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bond_triple"
                        android:id="@+id/tripleBondButton" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:id="@+id/deleteButton"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#cbb7b7b7"
        android:id="@+id/buttonLayout">

        <ImageButton
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:id="@+id/startMoleSearch"
            android:src="@drawable/ic_search_white_24dp"
            android:background="#FF969696"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:id="@+id/to3DButton"
            android:src="@drawable/ic_3d_rotation_white_24dp"
            android:background="#969696"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>
