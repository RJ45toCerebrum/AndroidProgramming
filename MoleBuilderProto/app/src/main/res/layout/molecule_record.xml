<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="120dp"
        android:weightSum="1"
        android:layout_margin="5dp"
        android:id="@+id/recordInfoCardLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#95a5a6"
            android:layout_weight="0.6"
            android:id="@+id/descriptioAreaInfoCard"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.4"
            android:id="@+id/innerRecordInfoCardLayout">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#7f8c8d"
                android:id="@+id/sourceAreaInfoCard" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="#ecf0f1"
                android:id="@+id/urlAreaInfoCard" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>