<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tylerheers.molebuilderproto.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:minHeight="540dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/buildAtomLayout">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:id="@+id/toolBarLayout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:id="@+id/atomScrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/atomScrollViewLayout">


                </LinearLayout>

            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:id="@+id/modeScrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/bondScrollViewLayout">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bond_single"
                        android:id="@+id/singleBondButton"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bond_double"
                        android:id="@+id/doubleBondButton"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bond_triple"
                        android:id="@+id/tripleBondButton"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:id="@+id/deleteButton"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_delete_sweep_black_24dp"
                        android:id="@+id/deleteSweepButton"
                        android:layout_height="50dp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/canvasLayout">


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#cb787878"
        android:id="@+id/buttonLayout">

        <ImageButton
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:id="@+id/startMoleSearch"
            android:src="@drawable/ic_search_white_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:src="@drawable/ic_3d_rotation_white_24dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/to3DButton"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:src="@drawable/ic_undo_white_24dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/undoActionButton" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:id="@+id/sceneInfoTextView"
            android:background="@color/black"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>
