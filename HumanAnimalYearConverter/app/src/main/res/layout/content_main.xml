                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="Age:"
                android:textSize="15dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

        </TableRow>
    </TableLayout>


</RelativeLayout>
